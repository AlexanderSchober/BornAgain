#!/bin/sh
# postinst script for the BornAgain library
# creates symbolic links for the library files in the PYTHONPATH

set -e

# creating link to BornAgain gui in bin directory
echo "------------ POSTINSTALL OPERATIONS... ------------"
COMMAND="ln -sf @CMAKE_INSTALL_PREFIX@/lib/@destination_suffix@/exec/BornAgain /usr/bin/bornagain"
echo ${COMMAND}
${COMMAND}

# creating links for python
COMMAND="ln -sf @CMAKE_INSTALL_PREFIX@/lib/@destination_suffix@/* @PYTHON_SITE_PACKAGES@/"
#COMMAND="cp -r @CMAKE_INSTALL_PREFIX@/lib/@destination_suffix@/bornagain @PYTHON_SITE_PACKAGES@/"
echo ${COMMAND}
${COMMAND}
